<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IndoorMappingApp.MenuPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:IndoorMappingApp.Helpers"
    BackgroundColor="White">

    <VerticalStackLayout
        Padding="20"
        HorizontalOptions="Center"
        Spacing="15">

        <!--  Use the real keys from your RESX  -->
        <Button
            BackgroundColor="Red"
            Clicked="OnLoginClicked"
            Text="{helpers:Translate MenuPage_Button_LoginPrompt}"
            TextColor="White" />

        <Button
            BackgroundColor="Gray"
            Clicked="OnRegisterClicked"
            Text="{helpers:Translate MenuPage_Button_RegisterTitle}"
            TextColor="White" />

        <Button
            BackgroundColor="Green"
            Clicked="OnGuestClicked"
            Text="{helpers:Translate MenuPage_Button_TryAsGuest}"
            TextColor="White" />

        <!--  Now this will pick up the Portuguese label from your RESX  -->
        <Button
            BackgroundColor="Blue"
            Clicked="OnToggleLanguageClicked"
            Text="{helpers:Translate MenuPage_Button_Portuguese}"
            TextColor="White" />

    </VerticalStackLayout>
</ContentPage>
