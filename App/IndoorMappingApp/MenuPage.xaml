<ContentPage
    x:Class="IndoorMappingApp.MenuPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:IndoorMappingApp.Helpers"
    BackgroundColor="White">

    <VerticalStackLayout
        Padding="20"
        HorizontalOptions="Center"
        Spacing="15">

        <!--  Dynamic localization via TranslateExtension  -->
        <Button
            BackgroundColor="Red"
            Clicked="OnLoginClicked"
            Text="{helpers:Translate LoginPrompt}"
            TextColor="White" />

        <Button
            BackgroundColor="Gray"
            Clicked="OnRegisterClicked"
            Text="{helpers:Translate RegisterTitle}"
            TextColor="White" />

        <Button
            BackgroundColor="Green"
            Clicked="OnGuestClicked"
            Text="{helpers:Translate TryAsGuest}"
            TextColor="White" />

        <!--  Language switch button  -->
        <Button
            BackgroundColor="Blue"
            Clicked="OnToggleLanguageClicked"
            Text="Portugues"
            TextColor="White" />

    </VerticalStackLayout>
</ContentPage>
