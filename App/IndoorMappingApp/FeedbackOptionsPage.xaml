<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndoorMappingApp.FeedbackOptionsPage"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*">

        <!-- Top Bar -->
        <Grid BackgroundColor="Red" HeightRequest="50" Padding="0" RowSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="Project Logo"
                   VerticalOptions="Center"
                   TextColor="White"
                   FontAttributes="Bold"
                   Margin="10,0" />

            <ImageButton Source="burguer_menu.png"
                         BackgroundColor="Transparent"
                         Grid.Column="1"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         Margin="10,0"
                         HeightRequest="24"
                         WidthRequest="24" />
        </Grid>

        <!-- Scrollable Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="20">

                <!-- ISEP Number Label -->
                <Label Text="ISEP Number"
                       FontSize="16"
                       TextColor="Black" />

                <!-- Picker -->
                <Label Text="Is this message related to any path?" />
                <Picker x:Name="PathPicker"
                        Title="Select your option">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>No</x:String>
                            <x:String>Path x \\ Yes</x:String>
                            <x:String>Path y \\ Yes</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

                <!-- Feedback Options -->
                <Label Text="Feedback" />

                <VerticalStackLayout Padding="10" BackgroundColor="White">
                    <HorizontalStackLayout>
                        <CheckBox x:Name="Option1" />
                        <Label Text="The path x seems very optimal." VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <CheckBox x:Name="Option2" />
                        <Label Text="The path x is always full of people." VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <CheckBox x:Name="Option3" />
                        <Label Text="This app is too slow to work on a daily basis." VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <CheckBox x:Name="Option4" />
                        <Label Text="The neurolinc is not working properly." VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <CheckBox x:Name="Option5" />
                        <Label Text="My position on the map is inaccurate." VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Send Button -->
                <Button Text="Send Feedback"
                        BackgroundColor="Red"
                        TextColor="White"
                        CornerRadius="10"
                        HorizontalOptions="Center"
                        WidthRequest="200"
                        Clicked="OnSendFeedbackClicked" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
