<ContentPage
    x:Class="IndoorMappingApp.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="clr-namespace:IndoorMappingApp.Helpers"
    BackgroundColor="White">
    <!--  Create a Grid to center the container  -->
    <Grid HorizontalOptions="Center" VerticalOptions="Center">

        <!--  Grey container with padding and rounded corners  -->
        <Frame
            Padding="20"
            BackgroundColor="#D3D3D3"
            BorderColor="Transparent"
            CornerRadius="0">
            <StackLayout
                HorizontalOptions="CenterAndExpand"
                Spacing="17"
                VerticalOptions="Center">

                <!--  Login Label  -->
                <Label
                    Margin="0,0,0,20"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="{helpers:Translate LoginPage_Title}"
                    TextColor="Black"
                    VerticalOptions="Start" />

                <!--  Email Text Entry  -->
                <Frame
                    Padding="0"
                    BorderColor="Black"
                    CornerRadius="0"
                    HasShadow="False"
                    HorizontalOptions="FillAndExpand">
                    <Entry
                        x:Name="emailEntry"
                        Background="White"
                        FontSize="17"
                        HorizontalOptions="FillAndExpand"
                        Keyboard="Email"
                        Placeholder="{helpers:Translate RegisterPage_Placeholder_Email}"
                        PlaceholderColor="Black"
                        TextColor="Black" />
                </Frame>

                <Frame
                    Padding="0"
                    BorderColor="Black"
                    CornerRadius="0"
                    HasShadow="False"
                    HorizontalOptions="FillAndExpand">
                    <!--  Password Text Entry  -->
                    <Entry
                        x:Name="passwordEntry"
                        Background="White"
                        FontSize="17"
                        HorizontalOptions="FillAndExpand"
                        IsPassword="True"
                        Placeholder="{helpers:Translate RegisterPage_Placeholder_Password}"
                        PlaceholderColor="Black"
                        TextColor="Black" />
                </Frame>
                <!--  Forgot Password label  -->
                <Button
                    BackgroundColor="Transparent"
                    BorderWidth="0"
                    Clicked="OnForgotPasswordClicked"
                    FontSize="17"
                    HorizontalOptions="Center"
                    Text="{helpers:Translate Button_ForgotPassword}"
                    TextColor="#2e52f3"
                    VerticalOptions="End" />

                <StackLayout
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    VerticalOptions="Center">
                    <Label
                        FontSize="17"
                        Text="{helpers:Translate Label_DontHaveAccount}"
                        TextColor="black"
                        VerticalOptions="Center" />

                    <Button
                        BackgroundColor="Transparent"
                        BorderWidth="0"
                        Clicked="OnRegisterClicked"
                        FontSize="17"
                        Text="{helpers:Translate Button_Register}"
                        TextColor="#2e52f3"
                        VerticalOptions="Center" />
                </StackLayout>

                <!--  Enter Button  -->
                <Button
                    BackgroundColor="Red"
                    BorderColor="Black"
                    BorderWidth="1"
                    Clicked="OnLoginClicked"
                    FontSize="16"
                    HorizontalOptions="FillAndExpand"
                    Text="{helpers:Translate MenuPage_Button_LoginPrompt}"
                    TextColor="White"
                    WidthRequest="70" />

            </StackLayout>

        </Frame>

    </Grid>


</ContentPage>