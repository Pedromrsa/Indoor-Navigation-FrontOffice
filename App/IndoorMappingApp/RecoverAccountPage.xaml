<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IndoorMappingApp.RecoverAccountPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:IndoorMappingApp.Helpers"
    BackgroundColor="White">

    <!--  Outer grid: single star column, three rows (auto, * , auto)  -->
    <Grid
        Padding="20"
        ColumnSpacing="15"
        HorizontalOptions="Fill"
        RowSpacing="15"
        VerticalOptions="Fill">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Header  -->
            <RowDefinition Height="*" />
            <!--  Content  -->
            <RowDefinition Height="Auto" />
            <!--  Footer  -->
        </Grid.RowDefinitions>

        <!--  Title in row 0  -->
        <Label
            Grid.Row="0"
            Grid.Column="0"
            FontSize="22"
            HorizontalOptions="Center"
            Text="{helpers:Translate RecoverAccount_Title}"
            TextColor="Black" />

        <!--  Main content in row 1  -->
        <ScrollView
            Grid.Row="1"
            Grid.Column="0"
            HorizontalOptions="Fill"
            VerticalOptions="FillAndExpand">
            <VerticalStackLayout
                Padding="10"
                HorizontalOptions="Fill"
                Spacing="20"
                VerticalOptions="Start">

                <!--  1. Email prompt  -->
                <Label
                    x:Name="emailLabel"
                    FontSize="17"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Center"
                    Text="{helpers:Translate Recover_Email_Text}"
                    TextColor="Black" />

                <!--  2. Email entry frame  -->
                <Frame
                    x:Name="emailFrame"
                    Padding="0"
                    BorderColor="Black"
                    CornerRadius="4"
                    HasShadow="False"
                    HorizontalOptions="FillAndExpand">
                    <Entry
                        x:Name="emailEntry"
                        Background="White"
                        FontSize="17"
                        HorizontalOptions="FillAndExpand"
                        Keyboard="Email"
                        Placeholder="{helpers:Translate RecoverAccount_Placeholder_Email}"
                        PlaceholderColor="Gray"
                        TextColor="Black" />
                </Frame>

                <!--  3. Token prompt (initially hidden)  -->
                <Label
                    x:Name="tokenLabel"
                    FontSize="17"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Center"
                    IsVisible="False"
                    Text="{helpers:Translate RecoverAccount_Label_EnterToken}"
                    TextColor="Black" />

                <!--  4. Token entry frame (initially hidden)  -->
                <Frame
                    x:Name="tokenFrame"
                    Padding="0"
                    BorderColor="Black"
                    CornerRadius="4"
                    HasShadow="False"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="False">
                    <Entry
                        x:Name="tokenEntry"
                        Background="White"
                        FontSize="17"
                        HorizontalOptions="FillAndExpand"
                        Keyboard="Default"
                        Placeholder="{helpers:Translate RecoverAccount_Placeholder_Token}"
                        PlaceholderColor="Gray"
                        TextColor="Black" />
                </Frame>

                <!--  5. Instruction label  -->
                <Label
                    x:Name="sendEmailLabel"
                    FontSize="17"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="{helpers:Translate RecoverAccount_Label_Instructions}"
                    TextColor="Black" />

                <!--  6. Send Email button  -->
                <Button
                    x:Name="sendEmailButton"
                    BackgroundColor="Red"
                    BorderColor="Black"
                    BorderWidth="1"
                    Clicked="OnSendEmailClicked"
                    FontSize="16"
                    HorizontalOptions="FillAndExpand"
                    Text="{helpers:Translate RecoverAccount_Button_SendEmail}"
                    TextColor="White" />

                <!--  7. Verify token button (initially hidden)  -->
                <Button
                    x:Name="verifyButton"
                    BackgroundColor="Green"
                    BorderColor="Black"
                    BorderWidth="1"
                    Clicked="OnVerifyClicked"
                    FontSize="16"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="False"
                    Text="{helpers:Translate RecoverAccount_Button_Confirm}"
                    TextColor="White" />

            </VerticalStackLayout>
        </ScrollView>

        <!--  Footer row 2: Back to Login  -->
        <Button
            x:Name="backMenuButton"
            Grid.Row="2"
            Grid.Column="0"
            BackgroundColor="Transparent"
            Clicked="OnBackToMenuClicked"
            FontSize="16"
            HorizontalOptions="Center"
            Text="{helpers:Translate RecoverAccount_Button_BackToLogin}"
            TextColor="Blue" />

    </Grid>
</ContentPage>
