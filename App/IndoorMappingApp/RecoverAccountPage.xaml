<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IndoorMappingApp.RecoverAccountPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:IndoorMappingApp.Helpers"
    BackgroundColor="White">

    <Grid RowDefinitions="*,Auto,*" ColumnDefinitions="*">
        <!-- Center the StackLayout vertically -->
        <StackLayout
            Grid.Row="1"
    Padding="20"
    Spacing="17"
    VerticalOptions="Center"
    HorizontalOptions="CenterAndExpand"
    WidthRequest="300">

            <!-- Title -->
            <Label
                Margin="0,0,0,20"
                FontSize="20"
                LineBreakMode="NoWrap"
                HorizontalOptions="Center"
                Text="{helpers:Translate RecoverAccount_Title}"
                TextColor="Black" />

            <!-- Token label -->
            <Label
                x:Name="tokenLabel"
                FontSize="17"
                LineBreakMode="NoWrap"
                HorizontalTextAlignment="Center"                
                IsVisible="False"
                Text="{helpers:Translate RecoverAccount_Label_EnterToken}"
                TextColor="Green" />

            <!-- Email label -->
            <Label
                x:Name="emailLabel"
                FontSize="17"
                LineBreakMode="NoWrap"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="{helpers:Translate Recover_Email_Text}"
                TextColor="Black" />

            <!-- Email input -->
            <Frame
                x:Name="emailFrame"
                Padding="0"
                BorderColor="Black"
                CornerRadius="4"
                HasShadow="False"
                HorizontalOptions="FillAndExpand">
                <Entry
                    x:Name="emailEntry"
                    Background="White"
                    FontSize="17"
                    Keyboard="Email"
                    Placeholder="{helpers:Translate RecoverAccount_Placeholder_Email}"
                    PlaceholderColor="Gray"
                    TextColor="Black" />
            </Frame>

            <!-- Token input -->
            <Frame
                x:Name="tokenFrame"
                Padding="0"
                BorderColor="Black"
                CornerRadius="4"
                HasShadow="False"
                HorizontalOptions="FillAndExpand"
                IsVisible="False">
                <Entry
                    x:Name="tokenEntry"
                    Background="White"
                    FontSize="17"
                    Keyboard="Default"
                    Placeholder="{helpers:Translate RecoverAccount_Placeholder_Token}"
                    PlaceholderColor="Gray"
                    TextColor="Black" />
            </Frame>

            <!-- Instructions -->
            <Label
                x:Name="sendEmailLabel"
                FontSize="17"
                LineBreakMode="NoWrap"
                HorizontalTextAlignment="Center"
                Text="{helpers:Translate RecoverAccount_Label_Instructions}"
                TextColor="Black" />

            <!-- Send Email button -->
            <Button
                x:Name="sendEmailButton"
                BackgroundColor="Red"
                BorderColor="Black"
                BorderWidth="1"
                Clicked="OnSendEmailClicked"
                FontSize="16"
                HorizontalOptions="FillAndExpand"
                Text="{helpers:Translate RecoverAccount_Button_SendEmail}"
                TextColor="White" />

            <!-- Verify Token button -->
            <Button
                x:Name="verifyButton"
                BackgroundColor="Green"
                BorderColor="Black"
                BorderWidth="1"
                Clicked="OnVerifyClicked"
                FontSize="16"
                HorizontalOptions="FillAndExpand"
                Text="{helpers:Translate RecoverAccount_Button_Confirm}"
                TextColor="White"
                IsVisible="False" />

            <!-- Change Password button -->
            <Button
                x:Name="changePasswordButton"
                BackgroundColor="Blue"
                BorderColor="Black"
                BorderWidth="1"
                Clicked="OnChangePasswordClicked"
                FontSize="16"
                HorizontalOptions="FillAndExpand"
                Text="{helpers:Translate RecoverAccount_Button_ChangePassword}"
                TextColor="White"
                IsVisible="False" />

            <!-- Back to login -->
            <Button
                x:Name="backMenuButton"
                BackgroundColor="Transparent"
                Clicked="OnBackToMenuClicked"
                FontSize="16"
                HorizontalOptions="Center"
                Text="{helpers:Translate RecoverAccount_Button_BackToLogin}"
                TextColor="Blue" />

        </StackLayout>
    </Grid>
</ContentPage>
