<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndoorMappingApp.OptionsPage"
             BackgroundColor="White"
             Title="Options">

    <StackLayout>
        <!-- Options as Buttons -->
        <StackLayout Padding="20,20" Spacing="25">

            <!-- Option with underline -->
            <Grid>
                <Button Text="Account Settings"
                        Clicked="OnAccountSettingsClicked"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        HorizontalOptions="Start"
                        Padding="0" />
            </Grid>

            <Button Text="Give Us Feedback"
                    Clicked="OnFeedbackClicked"
                    BackgroundColor="Transparent"
                    TextColor="Black"
                    HorizontalOptions="Start"
                    Padding="0" />

            <Button Text="Check Diary"
                    Clicked="OnDiaryClicked"
                    BackgroundColor="Transparent"
                    TextColor="Black"
                    HorizontalOptions="Start"
                    Padding="0" />

            <!-- Option with underline -->
            <Grid>
                <Button Text="Path Problems? Share them"
                        Clicked="OnPathProblemsClicked"
                        BackgroundColor="Transparent"
                        TextColor="Black"
                        HorizontalOptions="Start"
                        Padding="0" />
            </Grid>

            <Button Text="Log Out"
                    Clicked="OnLogoutClicked"
                    BackgroundColor="Transparent"
                    TextColor="Black"
                    HorizontalOptions="Start"
                    Padding="0" />

        </StackLayout>

    </StackLayout>
</ContentPage>
