<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndoorMappingApp.AccountSettings"
             Title="AccountSettings">
    <VerticalStackLayout Padding="0">

        <!-- Content Form -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- ISEP Number Label -->
                <Label Text="ISEP Number" FontSize="14" />

                <!-- New Password -->
                <Label Text="New Password" FontSize="14" />
                <Entry x:Name="NewPasswordEntry"
                        IsPassword="True"
                        Placeholder="***********"
                        FontSize="14"/>

                <!-- Confirm Password -->
                <Label Text="Confirm Password" FontSize="14" />
                <Entry x:Name="ConfirmPasswordEntry"
                        IsPassword="True"
                        Placeholder=""
                        FontSize="14"
                        BackgroundColor="White"/>

                <!-- Physical Limitation Dropdown -->
                <Label Text="Physical Limitation" FontSize="14" />
                <Picker x:Name="LimitationPicker" Title="Select Limitation">
                    <Picker.Items>
                        <x:String>None</x:String>
                        <x:String>Paraplegic</x:String>
                        <x:String>Quadriplegic</x:String>
                    </Picker.Items>
                </Picker>

                <!-- Language Dropdown -->
                <Label Text="Language" FontSize="14" />
                <Picker x:Name="LanguagePicker" Title="Select Language">
                    <Picker.Items>
                        <x:String>English</x:String>
                        <x:String>Portuguese</x:String>
                    </Picker.Items>
                </Picker>

                <!-- Save Changes Button -->
                <Button Text="Save Changes"
                        BackgroundColor="Red"
                        TextColor="White"
                        CornerRadius="6"
                        HeightRequest="50" 
                        Clicked="OnSaveChangesClicked" />
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>